<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.objectica.bbot.android">
    <uses-sdk android:targetSdkVersion="10"></uses-sdk>
    <application android:icon="@drawable/icon" android:label="Bbot Control">
        <activity android:name=".BbotControl" 
        android:screenOrientation="landscape"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity 
        android:name=".BbotSettings" 
        android:screenOrientation="landscape"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        />
    </application>
</manifest>
